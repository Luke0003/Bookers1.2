<div class="container">
  <h1>Books</h1>
    <% @books.each do |book| %>
      <div class="card w-50 mx-auto">
        <%= image_tag book.get_image(100, 100), class: "card-img-top" %>
          <div class="card-body row">
            <div class="col-4">
              <p><%= image_tag book.user.get_profile_image(100, 100), class: "rounded-circle" %></p>
              投稿者:<%= link_to book.user.name, user_path(book.user_id) %>
            </div>
            <div class="col-8">
              <p><%= book.title %></p>
              <p><%= book.body %></p>
              <p><%= link_to "Show", book_path(book.id) %></p>
              <p><%= link_to "Edit", edit_book_path(book.id) %></p>
              <p><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></p>
            </div>
          </div>
        </div>
      <% end %>

  <%= paginate @books %>
  <h2>New book</h2>
  <%= render "form", book: @book %>
</div>