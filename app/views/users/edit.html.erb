<h1>ユーザー編集</h1>
<%= form_with model: @user do |f| %>
  <div class="field">
    <label for="user_name">Name</label>
    <%= f.text_field :name %>
  </div>
   <div class="field">
    <label for="user_profile_image">Profile Image</label>
    <%= f.file_field :profile_image, accept: "image/*" %>
  </div>
   <div class="actions">
    <%= f.submit "プロフィールを編集する" %>
  </div>
<% end %>